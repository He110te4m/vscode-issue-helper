{
  "name": "vscode-issue-helper",
  "displayName": "Issue Helper",
  "description": "",
  "author": "He110",
  "license": "MIT",
  "publisher": "he110te4m",
  "categories": [],
  "keywords": [],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "activationEvents": [
    "workspaceContains:*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "fs-extra": "^10.1.0",
    "octokit": "^2.0.7",
    "simple-git": "^3.14.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.3",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.71.0",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.8.3"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "vscode-issue-helper.token": {
          "type": "object",
          "properties": {
            "vscode-issue-helper.token.github": {
              "type": "string",
              "description": "GitHub personal access tokens"
            },
            "vscode-issue-helper.token.gitlab": {
              "type": "string",
              "description": "GitLab personal access tokens"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "vscode-issue-helper.code.mark",
        "title": "Append code to issue"
      },
      {
        "command": "vscode-issue-helper.issue.create",
        "title": "Publish issue"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-issue-helper-views-issue",
          "title": "Issue helper",
          "icon": "$(remote-explorer)"
        }
      ]
    },
    "views": {
      "vscode-issue-helper-views-issue": [
        {
          "type": "webview",
          "id": "vscode-issue-helper-views-issue.issue-helper",
          "name": "Create Issue",
          "icon": "$(remote-explorer)",
          "contextualTitle": "Create Issue"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-issue-helper.code.mark",
          "when": "false"
        },
        {
          "command": "vscode-issue-helper.issue.create",
          "when": "false"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "vscode-issue-helper.code.mark",
          "group": "inline",
          "when": "commentController == vscode-issue-helper && commentThreadIsEmpty"
        },
        {
          "command": "vscode-issue-helper.issue.create",
          "group": "inline@1",
          "when": "commentController == vscode-issue-helper && commentThreadIsEmpty"
        }
      ]
    }
  }
}
